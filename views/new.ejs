<%- include("partials/header") %> 

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form action="/blogs" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input required type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="url" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Blog content</label>
            <textarea required name="blog[body]" placeholder="Article"></textarea>
        </div>
        <button class="ui purple inverted button">Submit</button>
    </form>
</div>

<%- include("partials/footer") %> 